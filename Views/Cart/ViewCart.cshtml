<div class="row" style="margin-bottom:70px">
    
    <div class="col-md-4 col-xs-12 col-md-offset-4">

        @if (@Session["user"] != null)
        {
            <div class="cart">
                <h3>
                    Welcome to our Online Store! @Session["user"]
                </h3>
            </div>
        }
    </div>
</div>
@if (@Session["user"] != null)
{
    <div class="row">
        <div class="col-md-4 col-xs-12 col-md-offset-8" style="margin-top:-70px">

            <div class="shopping">
                <div class="c1" style="display:inline-block;margin-right:10px;"><h1><span class="glyphicon glyphicon-shopping-cart"></span></h1></div>
                <div class="c2" style="display:inline-block;">
                    <h3>
                        Your Shopping Cart
                    </h3>
                    <a href="#" style="text-decoration:none;float:right">View Cart &raquo;</a>
                </div>
            </div>

        </div>
    </div>
}
<div class="row">
    <div class="col-md-3 col-xs-12 col-sm-12" style="margin-bottom:20px">
        <div class="categories">
            <ul class="list-unstyled">
                <h3>Brands</h3>
                <li>@Html.ActionLink("Nokia", "Nokia", "Brand")</li>
                <li>@Html.ActionLink("HTC", "HTC", "Brand")</li>
                <li>@Html.ActionLink("QMobile", "QMobile", "Brand")</li>
                <li>@Html.ActionLink("Huawei", "Huawei", "Brand")</li>
                <li>@Html.ActionLink("Samsung", "Samsung", "Brand")</li>
                <li>@Html.ActionLink("iPhone", "iPhone", "Brand")</li>
                <li>@Html.ActionLink("Sony", "Sony", "Brand")</li>
                <li>@Html.ActionLink("Lenovo", "Lenovo", "Brand")</li>
            </ul>
        </div>
    </div>

    <div class="col-md-9 hidden-xs hidden-sm">
        <h3 style="text-align:center">Your Cart</h3>
        <table class="table table-bordered" style="margin-top:20px">
            <thead>
                <tr>
                    <th>Model</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@s.pid</td>
                        <td>@s.Product.Price</td>
                        <td>@s.quantity</td>
                    </tr>
                }
            </tbody>

        </table>
        <div class="btn btn-danger">
            <a href="/Cart/Checkout" style="color:white;text-decoration: none">Check out</a>
        </div>
        <div class="btn btn-default">
            <a href="/Home/Index" style="color:white;text-decoration: none">Continue Shopping</a>
        </div>
        
    </div>
</div>


