@model  XtremeMobiles.Models.Product
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Update Product</strong>
    </div>
    <div class="panel-body">
        <form method="post" action="/Admin/UpdateProductDb?Mod=@Model.Model" class="form-horizontal" role="form">
            <div class="form-group">
                <label class="control-label col-sm-2" for="brand">Price:</label>
                <div class="col-sm-10">
                    <input type="text" name="t1" value="@Model.Price" required />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Latest Phone:</label>
                <div class="col-sm-10">
                    Yes <input type="radio" name="lat" value="yes" />
                    <br>
                    No <input type="radio" name="lat" value="no" />
                </div>
            </div>
            <div class="form-group">

                <div class="col-sm-10">
                    <input type="submit" />
                </div>
            </div>
        </form>
    </div>
</div>
